[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=4

[{*.sht,*.html,*.shtml,*.shtm,*.htm,*.ng}]
indent_size=2

[{*.xml}]
indent_size=4

[{jest.config,.stylelintrc,.babelrc,*.json,*.bowerrc,*.jsb3,*.jsb2,*.map}]
indent_style=space
indent_size=2

[{*.csv,.babelrc,.stylelintrc,.eslintrc,jest.config,*.bowerrc,*.jsb3,*.jsb2,*.json}]
